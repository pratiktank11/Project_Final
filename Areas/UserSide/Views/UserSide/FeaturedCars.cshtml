@{
	Layout = "_Layout";
}
@using System.Data
@model FeaturedCarsFormsModel

<!--featured-cars start -->
<section id="featured-cars" class="featured-cars" style="padding-top:10%">
	<div class="container">
		<div class="section-header">
			<p>checkout <span>the</span> featured cars</p>
			<h2>featured cars</h2>
		</div><!--/.section-header-->
		<form>
		<div class="container" >
			<div class="row" style="padding-top:9%">
				<div class="col-md-12">
					<div class="model-search-content">
						<div class="row" style="padding-right:100px">
							<div class="col-md-offset-1 col-md-3 col-sm-4">
								<div class="single-model-search">
									<h2 style="text-align: center">Select Brand</h2>
									<div class="model-select-icon">
										<select class="form-control" id="BrandID" asp-for="@Model.BrandID" >
											<option value="">Select Car Brand</option>
											@foreach (FeaturedCarsFormsModel BrandName in ViewBag.BrandList)
											{
												<option value="@BrandName.BrandID">@BrandName.BrandName</option>
											}
										</select>
									</div><!-- /.model-select-icon -->
								</div>
							</div>
							<div class="col-md-offset-1 col-md-3 col-sm-4">
								<div class="single-model-search">
									<h2 style="text-align: center">Select Transmission</h2>
									<div class="model-select-icon">
										<select class="form-control" id="TransmissionID" asp-for="@Model.TransmissionID">
											<option value="">Select Transmission</option>
											@foreach (FeaturedCarsFormsModel TransmissionType in ViewBag.TransmissionTypeList)
											{
												<option value="@TransmissionType.TransmissionID">@TransmissionType.TransmissionType</option>
											}
										</select>
									</div><!-- /.model-select-icon -->
								</div>
							</div>
							<div class="col-md-offset-1 col-md-3 col-sm-4">
								<div class="single-model-search">
									<h2 style="text-align: center">Select FuelType</h2>
									<div class="model-select-icon">
											<select class="form-control" id="FuelTypeID" asp-for="@Model.FuelTypeID">
												<option value="">Select FuelTypeID</option>
											@foreach (FeaturedCarsFormsModel FuelType in ViewBag.FuelTypeList)
											{
												<option value="@FuelType.FuelTypeID">@FuelType.FuelType</option>
											}
										</select>
									</div><!-- /.model-select-icon -->
								</div>
							</div>
						</div>
					</div>

				</div>
				<div class="col-md-2 col-sm-12" style="margin:100px 40px 0px 430px">
					<div class="single-model-search text-center">
							<button class="welcome-btn model-search-btn" type="submit" id="search" @* asp-area="UserSide" asp-controller="UserSide" asp-action="FeaturedCars_FilterCars" *@>
							
							search	

						</button>
					</div>
				</div>
			</div>
		</div>
		</form>
		 <div class="featured-cars-content" id="FeaturedCarsSearchResult">
			<div class="row">

				@foreach (FeaturedCarsFormsModel Cars in ViewBag.FeaturedCarsAllList)
				{
				
					<div class="col-lg-3 col-md-4 col-sm-6" style="height: auto">
						<div class="single-featured-cars">
							<div class="featured-img-box">
								<div class="featured-cars-img">
									<img src="@Url.Content(@Cars.ImgURL.ToString())" alt="cars">
								</div>
								<div class="featured-model-info">
									<p>
										@Cars.TransmissionType.ToString()
										<span class="featured-mi-span"></span>
										@Cars.FuelType.ToString()
									</p>
								</div>
							</div>
							<div class="featured-cars-txt">
								<h2><a>@Cars.BrandName.ToString() &nbsp;&nbsp; @Cars.CarName.ToString()</a></h2>
								<h3><b>&#8377;</b>&nbsp;@Cars.Price.ToString()</h3>
								<p>
									@Cars.Description.ToString()
								</p>
							</div>
						</div>
					</div>
					
				
				}
			</div>
			</div>
		</div> 
	<!--/.container-->

</section><!--/.featured-cars-->
<!--featured-cars end -->


